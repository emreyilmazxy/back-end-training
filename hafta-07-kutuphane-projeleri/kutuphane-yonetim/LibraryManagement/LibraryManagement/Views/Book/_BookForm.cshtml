@model LibraryManagement.Models.BookFormViewModel

<div class="form-group mb-3">
    <label for="Title" class="form-label">Kitap Adı</label>
    <input asp-for="Title" class="form-control" placeholder="Kitap adı giriniz" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>

<div class="form-group mb-3">
    <label for="Genre" class="form-label">Tür</label>
    <input asp-for="Genre" class="form-control" placeholder="Tür giriniz" />
    <span asp-validation-for="Genre" class="text-danger"></span>
</div>

<input asp-for="Id" type="hidden" />

<div class="form-group text-end">
    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="List" class="btn btn-secondary">İptal</a>
</div>
<div class="form-group mb-3">
    <label for="AuthorId" class="form-label">Yazar</label>
    <select asp-for="AuthorId" class="form-select" asp-items="@(new SelectList(ViewBag.Authors, "Id", "Name"))">
        <option value="">Yazar Seçiniz</option>
    </select>
    <span asp-validation-for="AuthorId" class="text-danger"></span>
</div>
