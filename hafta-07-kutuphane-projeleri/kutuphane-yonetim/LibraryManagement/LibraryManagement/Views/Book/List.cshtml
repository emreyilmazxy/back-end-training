@model List<LibraryManagement.Models.BookListViewModel>



<h1 class="mb-4 text-center">📚 Kitap Listesi</h1>

<div class="text-center mb-3">
    <a href="@Url.Action("Create", "Book")" class="btn btn-success">+ Kitap Ekle</a>
</div>

<div class="transparent-table-wrapper ">
    <table class="table table-bordered text-center table-transparent mb-0">
        <thead>
            <tr>
                <th>Kitap ID</th>
                <th>Kitap Adı</th>
                <th>Tür</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Title</td>
                    <td>@book.Genre</td>
                    <td>
                        <a href="@Url.Action("Details", "Book", new { id = book.Id })" class="btn btn-info btn-sm me-1">Detay</a>
                        <a href="@Url.Action("Edit", "Book", new { id = book.Id })" class="btn btn-primary btn-sm me-1">Düzenle</a>
                        <a href="@Url.Action("Delete", "Book", new { id = book.Id })" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
