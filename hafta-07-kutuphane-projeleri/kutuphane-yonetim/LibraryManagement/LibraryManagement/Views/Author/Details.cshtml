@model LibraryManagement.Models.AuthorDetailViewModel

<div class="author-details-wrapper">
    <h2>@Model.FullName</h2>
    <p><strong>Doğum Tarihi:</strong> @Model.DateOfBirth.ToString("dd MMMM yyyy")</p>

    <h4>Kitapları:</h4>
    @if (Model.Books != null && Model.Books.Any())
    {
        <ul>
            @foreach (var book in Model.Books)
            {
                <li>@book.Title (@book.PublishDate.Year)</li>
            }
        </ul>
    }
    else
    {
        <p>Bu yazarın henüz bir kitabı yok.</p>
    }
</div>
<div class="text-end mt-4">
    <a href="@Url.Action("List", "Author")" class="btn btn-secondary">← Yazar Listesine Dön</a>
</div>

