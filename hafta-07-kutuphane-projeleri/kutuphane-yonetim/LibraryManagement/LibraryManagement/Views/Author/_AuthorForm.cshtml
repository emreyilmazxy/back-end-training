@model LibraryManagement.Models.AuthorFormViewModel

<div class="form-group mb-3">

    <label for="FirstName" class="form-label">Ad</label>
    <input asp-for="FirstName" class="form-control" placeholder="Yazar adı girin"/>
    <span asp-validation-for="FirstName" class="text-danger" ></span>

</div>

<div class="form-group mb-3">
    <label for="LastName" class="form-label" >Soyad</label>
    <input asp-for="LastName" class="form-control" placeholder="Yazar soyadı girin" />
    <span asp-validation-for="LastName" class="text-danger"></span>


</div>

<div class="form-group mb-3">
    <label for="DateOfBirth" class="form-label">Doğum Tarihi</label>
    <input asp-for="DateOfBirth" class="form-control" placeholder="Doğum tarihi giriniz" />
    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
</div>

<div>

    <input asp-for="Id" type="hidden" />
</div>

<div class="form-group text-end">
    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="List" class="btn btn-secondary">İptal</a>
</div>