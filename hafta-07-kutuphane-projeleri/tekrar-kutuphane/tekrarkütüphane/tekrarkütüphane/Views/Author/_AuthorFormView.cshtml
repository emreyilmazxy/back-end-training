@model AuthorFormViewModel

<input type="hidden" asp-for="Id" />

<div class="p-4 rounded-4 shadow" style="background: rgba(0,0,0,0.5); backdrop-filter: blur(6px); border: 1px solid rgba(255,255,255,0.1); color: white;">

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">Ad</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label">Soyad</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DateOfBirth" class="form-label">Doğum Tarihi</label>
        <input asp-for="DateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-success">✔️ Kaydet</button>
        <a asp-action="List" class="btn btn-secondary">↩️ Geri Dön</a>
    </div>
</div>
