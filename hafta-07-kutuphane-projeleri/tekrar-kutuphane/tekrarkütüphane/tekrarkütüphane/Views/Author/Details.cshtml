@model AuthorDetailsViewModel

@{
    ViewData["Title"] = "Yazar Detayı";
}

<div class="container py-5">
    <div class="p-4 rounded-4 shadow-lg text-white" style="background: rgba(0,0,0,0.5); backdrop-filter: blur(6px); border: 1px solid rgba(255,255,255,0.1);">
        <h2 class="mb-4">👤 @Model.FirstName @Model.LastName</h2>

        <dl class="row">
            <dt class="col-sm-3">Doğum Tarihi</dt>
            <dd class="col-sm-9">@Model.DateOfBirth.ToString("dd MMMM yyyy")</dd>
        </dl>

        <h4 class="mt-4 mb-3">📚 Kitapları</h4>
        @if (Model.Books != null && Model.Books.Any())
        {
            <ul class="list-group">
                @foreach (var book in Model.Books)
                {
                    <li class="list-group-item bg-transparent text-white" style="border-color: rgba(255,255,255,0.2);">
                        <strong>@book.Title</strong> - @book.Genre (@book.PublishDate.ToString("yyyy"))
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">Bu yazara ait kitap bulunmamaktadır.</p>
        }

        <div class="mt-4">
            <a asp-action="List" class="btn btn-secondary">↩️ Geri Dön</a>
        </div>
    </div>
</div>
