<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Projem</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <header class="d-flex flex-wrap align-items-center py-3 mb-4 border-bottom " style="background-color: #f5f5dc; color: #333;">
        <div class="d-flex align-items-center me-4">
            <a asp-controller="Home" asp-action="Index" class="text-dark text-decoration-none  d-flex align-items-center">
                <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
                <span class="fs-4">Ana Sayfa</span>
            </a>
        </div>

        <ul  class="nav nav-pills">
           
            <li  class="nav-item"><a asp-controller="Home" asp-action="About"  class="nav-link">About</a></li>
        </ul>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer class="text-center py-3 mt-auto" style="background-color: #f5f5dc; color: #333;">
        <small>Bu sitenin tüm hakları Emre Yılmaz'a aittir. © @DateTime.Now.Year</small>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
