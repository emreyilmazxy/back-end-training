@model Book

@{
    ViewData["Title"] = "Kitap Sil";
}

<div class="container py-5">
    <div class="alert alert-danger shadow rounded-3">
        <h4>⚠️ Dikkat!</h4>
        <p>
            <strong>@Model.Title</strong> adlı kitabı silmek istediğinize emin misiniz?
        </p>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">🗑️ Evet, Sil</button>
            <a asp-action="List" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>
